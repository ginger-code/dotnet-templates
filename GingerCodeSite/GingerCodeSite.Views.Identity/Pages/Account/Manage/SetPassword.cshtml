@page "/account/manage/set-password"
@model SetPasswordModel
@{
    ViewData[ "Title" ] = "Set password";
    ViewData[ "ActivePage" ] = ManageNavPages.ChangePassword;
}

<h3>Set your password</h3>
<partial for="StatusMessage "
         name="_StatusMessage" />
<p class="is-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="container">
    <div class="column">
        <form id="set-password-form"
              method="post">
            <div asp-validation-summary="ModelOnly "
                 class="is-danger">
            </div>
            <div class="field">
                <input asp-for="Input.NewPassword "
                       autocomplete="new-password"
                       class="input"
                       type="password" />
                <label asp-for="Input.NewPassword "
                       class="label">
                </label>
                <span asp-validation-for="Input.NewPassword "
                      class="is-danger">
                </span>
            </div>
            <div class="field">
                <input asp-for="Input.ConfirmPassword "
                       autocomplete="new-password"
                       class="input"
                       type="password" />
                <label asp-for="Input.ConfirmPassword "
                       class="label">
                </label>
                <span asp-validation-for="Input.ConfirmPassword "
                      class="is-danger">
                </span>
            </div>
            <button class="button is-link"
                    type="submit">
                Set password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}