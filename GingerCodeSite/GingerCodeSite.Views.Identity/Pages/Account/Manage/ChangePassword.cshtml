@page "/account/manage/change-password"
@model ChangePasswordModel
@{
    ViewData[ "Title" ] = "Change password";
    ViewData[ "ActivePage" ] = ManageNavPages.ChangePassword;
}

<h3 class="title">@ViewData[ "Title" ]</h3>
<partial for="StatusMessage "
         name="_StatusMessage" />
<div class="container">
    <div class="column">
        <form id="change-password-form"
              method="post">
            <div asp-validation-summary="ModelOnly "
                 class="is-danger">
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.OldPassword "
                       autocomplete="current-password"
                       class="input" />
                <label asp-for="Input.OldPassword "
                       class="label">
                </label>
                <span asp-validation-for="Input.OldPassword "
                      class="is-danger">
                </span>
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.NewPassword "
                       autocomplete="new-password"
                       class="input" />
                <label asp-for="Input.NewPassword "
                       class="label">
                </label>
                <span asp-validation-for="Input.NewPassword "
                      class="is-danger">
                </span>
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.ConfirmPassword "
                       autocomplete="new-password"
                       class="input" />
                <label asp-for="Input.ConfirmPassword "
                       class="label">
                </label>
                <span asp-validation-for="Input.ConfirmPassword "
                      class="is-danger">
                </span>
            </div>
            <button class="button is-link"
                    type="submit">
                Update password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}