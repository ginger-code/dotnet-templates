@page "/account/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Components.Web
@model LoginModel

@{
    ViewData[ "Title" ] = "Log in";
}
<h1 class="title">@ViewData[ "Title" ]</h1>
<div class="columns">
    <div class="column">
        <section>
            <form id="account"
                  method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly "
                     class="is-danger">
                </div>
                <div class="field">
                    <input aria-required="true"
                           asp-for="Input.Email "
                           autocomplete="username"
                           class="input"
                           type="text" />
                    <label asp-for="Input.Email "
                           class="label">
                    </label>
                    <span asp-validation-for="Input.Email "
                          class="is-danger">
                    </span>
                </div>
                <div class="field">
                    <input aria-required="true"
                           asp-for="Input.Password "
                           autocomplete="current-password"
                           class="input"
                           type="password" />
                    <label asp-for="Input.Password "
                           class="label">
                    </label>
                    <span asp-validation-for="Input.Password "
                          class="is-danger">
                    </span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe "
                               class="label">
                            <input asp-for="Input.RememberMe "
                                   class="form-check-input"
                                   type="checkbox" />
                            @* @Html.DisplayNameFor<>(m => m.Input.RememberMe) *@
                        </label>
                    </div>
                </div>
                <div>
                    <button class="button is-link"
                            id="login-submit"
                            type="submit">
                        Log in
                    </button>
                </div>
                <div>
                    <p>
                        <a asp-page="./ForgotPassword"
                           id="forgot-password">
                            Forgot your password?
                        </a>
                    </p>
                    <p>
                        <a asp-page="./Register"
                           asp-route-returnUrl="@Model.ReturnUrl">
                            Register as a new user
                        </a>
                    </p>
                    <p>
                        <a asp-page="./ResendEmailConfirmation"
                           id="resend-confirmation">
                            Resend email confirmation
                        </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="column">
        <section>
            <h3>Use another service to log in.</h3>
            <hr />
            @{
                if ( ( Model.ExternalLogins?.Count ?? 0 ) == 0 )
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          id="external-account"
                          method="post">
                        <div>
                            <p>
                                @foreach ( var provider in Model.ExternalLogins ?? new List< AuthenticationScheme >() )
                                {
                                    <button class="button is-link"
                                            name="provider"
                                            title="Log in using your @provider.DisplayName account"
                                            type="submit"
                                            value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}