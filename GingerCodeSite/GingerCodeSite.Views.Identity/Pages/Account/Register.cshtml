@page "/account/register"
@using Microsoft.AspNetCore.Authentication
@model RegisterModel
@{
    ViewData[ "Title" ] = "Register";
}

<h1 class="title">@ViewData[ "Title" ]</h1>

<div class="columns">
    <div class="column">
        <form asp-route-returnUrl="@Model.ReturnUrl"
              id="registerForm"
              method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly "
                 class="is-danger">
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.Email "
                       autocomplete="username"
                       class="input" />
                <label asp-for="Input.Email "></label>
                <span asp-validation-for="Input.Email "
                      class="is-danger">
                </span>
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.Password "
                       autocomplete="new-password"
                       class="input"
                       type="password" />
                <label asp-for="Input.Password "></label>
                <span asp-validation-for="Input.Password "
                      class="is-danger">
                </span>
            </div>
            <div class="field">
                <input aria-required="true"
                       asp-for="Input.ConfirmPassword "
                       autocomplete="new-password"
                       class="input"
                       type="password" />
                <label asp-for="Input.ConfirmPassword "></label>
                <span asp-validation-for="Input.ConfirmPassword "
                      class="is-danger">
                </span>
            </div>
            <button class="button is-link"
                    id="registerSubmit"
                    type="submit">
                Register
            </button>
        </form>
    </div>
    <div class="column">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ( ( Model.ExternalLogins?.Count ?? 0 ) == 0 )
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          id="external-account"
                          method="post">
                        <div>
                            <p>
                                @foreach ( var provider in Model.ExternalLogins ?? new List< AuthenticationScheme >() )
                                {
                                    <button class="button is-link"
                                            name="provider"
                                            title="Log in using your @provider.DisplayName account"
                                            type="submit"
                                            value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}