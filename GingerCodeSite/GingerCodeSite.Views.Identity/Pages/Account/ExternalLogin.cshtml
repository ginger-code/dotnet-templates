@page "/account/login-external"
@model ExternalLoginModel
@{
    ViewData[ "Title" ] = "Register";
}

<h1 class="title">@ViewData[ "Title" ]</h1>
<h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p class="is-info"
   id="external-login-description">
    You've successfully authenticated with
    <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="container">
    <div class="column">
        <form asp-page-handler="Confirmation"
              asp-route-returnUrl="@Model.ReturnUrl"
              method="post">
            <div asp-validation-summary="ModelOnly "
                 class="is-danger">
            </div>
            <div class="field">
                <input asp-for="Input.Email "
                       autocomplete="email"
                       class="input" />
                <label asp-for="Input.Email "
                       class="label">
                </label>
                <span asp-validation-for="Input.Email "
                      class="is-danger">
                </span>
            </div>
            <button class="button is-link"
                    type="submit">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}